LABS344_CONTAINER_BASE_IMAGE ?= docker.io/almalinux/10-base:10
LABS344_CONTAINER_IMAGE_REGISTRY ?= localhost
LABS344_CONTAINER_IMAGE_REGISTRY_REMOTE ?= ghcr.io/bouncmpe
LABS344_CONTAINER_IMAGE_NAME ?= labs344
LABS344_CONTAINER_TARGET_VERSION ?= latest
LABS344_CONTAINER_CURRENT_VERSION ?= $(shell date +'%Y%m%d')

LABS344_CONTAINER_BUILD_CONTEXT ?= .

info:
	@echo "Container version: ${LABS344_CONTAINER_TARGET_VERSION}"
	@echo "Container current version: ${LABS344_CONTAINER_CURRENT_VERSION}"

runtime:
	buildah build \
		-f labs344/Dockerfile \
		--build-arg LABS344_CONTAINER_BASE_IMAGE=${LABS344_CONTAINER_BASE_IMAGE} \
		--build-arg LABS344_CONTAINER_VERSION=${LABS344_CONTAINER_CURRENT_VERSION} \
		--format oci \
		--layers=true \
		--target labs344-runtime \
		--tag ${LABS344_CONTAINER_IMAGE_REGISTRY}/${LABS344_CONTAINER_IMAGE_NAME}:${LABS344_CONTAINER_TARGET_VERSION} \
		--tag ${LABS344_CONTAINER_IMAGE_REGISTRY}/${LABS344_CONTAINER_IMAGE_NAME}:${LABS344_CONTAINER_CURRENT_VERSION} \
		--tag ${LABS344_CONTAINER_IMAGE_REGISTRY_REMOTE}/${LABS344_CONTAINER_IMAGE_NAME}:${LABS344_CONTAINER_TARGET_VERSION} \
		--tag ${LABS344_CONTAINER_IMAGE_REGISTRY_REMOTE}/${LABS344_CONTAINER_IMAGE_NAME}:${LABS344_CONTAINER_CURRENT_VERSION} \
		--tag ${LABS344_CONTAINER_IMAGE_REGISTRY}/${LABS344_CONTAINER_IMAGE_NAME}:${LABS344_CONTAINER_TARGET_VERSION}-runtime \
		--tag ${LABS344_CONTAINER_IMAGE_REGISTRY}/${LABS344_CONTAINER_IMAGE_NAME}:${LABS344_CONTAINER_CURRENT_VERSION}-runtime \
		--tag ${LABS344_CONTAINER_IMAGE_REGISTRY_REMOTE}/${LABS344_CONTAINER_IMAGE_NAME}:${LABS344_CONTAINER_TARGET_VERSION}-runtime \
		--tag ${LABS344_CONTAINER_IMAGE_REGISTRY_REMOTE}/${LABS344_CONTAINER_IMAGE_NAME}:${LABS344_CONTAINER_CURRENT_VERSION}-runtime \
	${LABS344_CONTAINER_BUILD_CONTEXT}
